generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  password        String
  name            String
  phone           String?
  role            String    @default("TENANT")
  stripeCustomerId String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  ownedProperties  Property[]      @relation("PropertyOwner")
  leases           Lease[]         @relation("TenantLease")
  tickets          Ticket[]        @relation("TicketCreator")
  ticketMessages   TicketMessage[]
  documents        Document[]
  billingSettings  OwnerBillingSettings?
  invoices         Invoice[]

  @@map("users")
}

model Property {
  id          String   @id @default(cuid())
  name        String
  address     String
  city        String
  state       String
  zipCode     String
  description String?
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  ownerId   String
  owner     User       @relation("PropertyOwner", fields: [ownerId], references: [id])
  units     Unit[]
  tickets   Ticket[]
  documents Document[]

  @@map("properties")
}

model Unit {
  id         String   @id @default(cuid())
  unitNumber String
  bedrooms   Int
  bathrooms  Float
  sqft       Int?
  rentAmount Float
  status     String   @default("AVAILABLE")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  leases     Lease[]
  tickets    Ticket[]

  @@map("units")
}

model Lease {
  id         String   @id @default(cuid())
  startDate  DateTime
  endDate    DateTime
  rentAmount Float
  deposit    Float?
  status     String   @default("ACTIVE")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  unitId   String
  unit     Unit      @relation(fields: [unitId], references: [id])
  tenantId String
  tenant   User      @relation("TenantLease", fields: [tenantId], references: [id])
  payments Payment[]

  @@map("leases")
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   @default("GENERAL")
  priority    String   @default("MEDIUM")
  status      String   @default("OPEN")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId     String
  user       User            @relation("TicketCreator", fields: [userId], references: [id])
  propertyId String?
  property   Property?       @relation(fields: [propertyId], references: [id])
  unitId     String?
  unit       Unit?           @relation(fields: [unitId], references: [id])
  messages   TicketMessage[]

  @@map("tickets")
}

model TicketMessage {
  id        String   @id @default(cuid())
  message   String
  createdAt DateTime @default(now())

  // Relations
  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId   String
  user     User   @relation(fields: [userId], references: [id])

  @@map("ticket_messages")
}

model Payment {
  id              String    @id @default(cuid())
  amount          Float
  dueDate         DateTime
  paidDate        DateTime?
  status          String    @default("PENDING")
  stripePaymentId String?
  paymentMethod   String?   // "card" or "ach"
  convenienceFee  Float?    // Fee charged for card payments
  totalPaid       Float?    // amount + convenienceFee
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  leaseId String
  lease   Lease  @relation(fields: [leaseId], references: [id])

  @@map("payments")
}

model Document {
  id                String    @id @default(cuid())
  title             String
  description       String?
  fileUrl           String
  fileType          String?
  requiresSignature Boolean   @default(false)
  signedAt          DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  propertyId String?
  property   Property? @relation(fields: [propertyId], references: [id])

  @@map("documents")
}

model OwnerBillingSettings {
  id                    String   @id @default(cuid())
  managementFeePercent  Float    @default(8.0)  // Default 8% management fee
  billingDay            Int      @default(1)    // Day of month to generate invoice
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  ownerId String @unique
  owner   User   @relation(fields: [ownerId], references: [id])

  @@map("owner_billing_settings")
}

model Invoice {
  id            String    @id @default(cuid())
  invoiceNumber String    @unique
  periodStart   DateTime
  periodEnd     DateTime
  subtotal      Float
  totalAmount   Float
  status        String    @default("PENDING") // PENDING, PAID, OVERDUE, CANCELLED
  dueDate       DateTime
  paidDate      DateTime?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  ownerId   String
  owner     User              @relation(fields: [ownerId], references: [id])
  lineItems InvoiceLineItem[]

  @@map("invoices")
}

model InvoiceLineItem {
  id          String   @id @default(cuid())
  description String
  quantity    Float    @default(1)
  unitPrice   Float
  amount      Float
  type        String   // "management_fee", "flat_fee", "other"
  createdAt   DateTime @default(now())

  // Relations
  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("invoice_line_items")
}
