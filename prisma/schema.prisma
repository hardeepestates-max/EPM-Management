generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  password        String
  name            String
  phone           String?
  role            String    @default("TENANT")
  stripeCustomerId String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  ownedProperties  Property[]      @relation("PropertyOwner")
  leases           Lease[]         @relation("TenantLease")
  tickets          Ticket[]        @relation("TicketCreator")
  ticketMessages   TicketMessage[]
  documents        Document[]
  billingSettings  OwnerBillingSettings?
  invoices         Invoice[]
  bulkEmails       BulkEmail[]

  @@map("users")
}

model Property {
  id          String   @id @default(cuid())
  name        String
  address     String
  city        String
  state       String
  zipCode     String
  description String?
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  ownerId       String
  owner         User           @relation("PropertyOwner", fields: [ownerId], references: [id])
  units         Unit[]
  tickets       Ticket[]
  documents     Document[]
  tenantInvites TenantInvite[]
  lateFeeConfig LateFeeConfig?
  expenses      Expense[]

  @@map("properties")
}

model Unit {
  id         String   @id @default(cuid())
  unitNumber String
  bedrooms   Int
  bathrooms  Float
  sqft       Int?
  rentAmount Float
  status     String   @default("AVAILABLE")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  propertyId    String
  property      Property       @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  leases        Lease[]
  tickets       Ticket[]
  tenantInvites TenantInvite[]

  @@map("units")
}

model Lease {
  id         String   @id @default(cuid())
  startDate  DateTime
  endDate    DateTime
  rentAmount Float
  deposit    Float?
  status     String   @default("ACTIVE")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  unitId           String
  unit             Unit              @relation(fields: [unitId], references: [id])
  tenantId         String
  tenant           User              @relation("TenantLease", fields: [tenantId], references: [id])
  payments         Payment[]
  rentCharges      RentCharge[]
  recurringCharges RecurringCharge[]
  paymentAging     PaymentAging?

  @@map("leases")
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   @default("GENERAL")
  priority    String   @default("MEDIUM")
  status      String   @default("OPEN")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId     String
  user       User            @relation("TicketCreator", fields: [userId], references: [id])
  propertyId String?
  property   Property?       @relation(fields: [propertyId], references: [id])
  unitId     String?
  unit       Unit?           @relation(fields: [unitId], references: [id])
  messages   TicketMessage[]

  @@map("tickets")
}

model TicketMessage {
  id        String   @id @default(cuid())
  message   String
  createdAt DateTime @default(now())

  // Relations
  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId   String
  user     User   @relation(fields: [userId], references: [id])

  @@map("ticket_messages")
}

model Payment {
  id              String    @id @default(cuid())
  amount          Float
  dueDate         DateTime
  paidDate        DateTime?
  status          String    @default("PENDING")
  stripePaymentId String?
  paymentMethod   String?   // "card" or "ach"
  convenienceFee  Float?    // Fee charged for card payments
  totalPaid       Float?    // amount + convenienceFee
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  leaseId    String
  lease      Lease       @relation(fields: [leaseId], references: [id])
  rentCharge RentCharge?

  @@map("payments")
}

model Document {
  id                String    @id @default(cuid())
  title             String
  description       String?
  fileUrl           String
  fileType          String?
  requiresSignature Boolean   @default(false)
  signedAt          DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  propertyId String?
  property   Property? @relation(fields: [propertyId], references: [id])

  @@map("documents")
}

model OwnerBillingSettings {
  id                    String   @id @default(cuid())
  managementFeePercent  Float    @default(8.0)  // Default 8% management fee
  billingDay            Int      @default(1)    // Day of month to generate invoice
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  ownerId String @unique
  owner   User   @relation(fields: [ownerId], references: [id])

  @@map("owner_billing_settings")
}

model Invoice {
  id            String    @id @default(cuid())
  invoiceNumber String    @unique
  periodStart   DateTime
  periodEnd     DateTime
  subtotal      Float
  totalAmount   Float
  status        String    @default("PENDING") // PENDING, PAID, OVERDUE, CANCELLED
  dueDate       DateTime
  paidDate      DateTime?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  ownerId   String
  owner     User              @relation(fields: [ownerId], references: [id])
  lineItems InvoiceLineItem[]

  @@map("invoices")
}

model InvoiceLineItem {
  id          String   @id @default(cuid())
  description String
  quantity    Float    @default(1)
  unitPrice   Float
  amount      Float
  type        String   // "management_fee", "flat_fee", "other"
  createdAt   DateTime @default(now())

  // Relations
  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("invoice_line_items")
}

model TenantInvite {
  id        String    @id @default(cuid())
  token     String    @unique @default(cuid())
  email     String
  status    String    @default("PENDING") // PENDING, ACCEPTED, EXPIRED
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  // Relations
  unitId     String
  unit       Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("tenant_invites")
}

// ============================================
// RENT ROLL & BILLING MODELS
// ============================================

model RentCharge {
  id         String    @id @default(cuid())
  amount     Float
  dueDate    DateTime
  chargeType String    @default("RENT") // RENT, LATE_FEE, UTILITY, PARKING, PET_FEE
  status     String    @default("UNPAID") // UNPAID, PARTIAL, PAID
  paidAmount Float     @default(0)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  leaseId   String
  lease     Lease    @relation(fields: [leaseId], references: [id], onDelete: Cascade)
  paymentId String?  @unique
  payment   Payment? @relation(fields: [paymentId], references: [id])

  @@map("rent_charges")
}

model PaymentAging {
  id          String   @id @default(cuid())
  current     Float    @default(0) // 0-30 days
  days30      Float    @default(0) // 31-60 days
  days60      Float    @default(0) // 61-90 days
  days90Plus  Float    @default(0) // 90+ days
  totalDue    Float    @default(0)
  lastUpdated DateTime @updatedAt
  createdAt   DateTime @default(now())

  // Relations
  leaseId String @unique
  lease   Lease  @relation(fields: [leaseId], references: [id], onDelete: Cascade)

  @@map("payment_aging")
}

model RecurringCharge {
  id         String   @id @default(cuid())
  chargeType String   // RENT, UTILITY, PARKING, PET_FEE, OTHER
  amount     Float
  dayOfMonth Int      @default(1)
  isActive   Boolean  @default(true)
  startDate  DateTime @default(now())
  endDate    DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  leaseId String
  lease   Lease  @relation(fields: [leaseId], references: [id], onDelete: Cascade)

  @@map("recurring_charges")
}

model LateFeeConfig {
  id              String   @id @default(cuid())
  gracePeriodDays Int      @default(5)
  feeType         String   @default("FLAT") // FLAT, PERCENTAGE
  feeAmount       Float    @default(50)
  maxFeeAmount    Float?   // Cap for percentage-based fees
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  propertyId String?   @unique
  property   Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("late_fee_configs")
}

model Expense {
  id          String    @id @default(cuid())
  category    String    // MAINTENANCE, REPAIR, UTILITY, INSURANCE, TAX, MANAGEMENT_FEE, OTHER
  amount      Float
  date        DateTime
  description String?
  vendorName  String?
  receiptUrl  String?
  isRecurring Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  propertyId String?
  property   Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("expenses")
}

// ============================================
// COMMUNICATIONS
// ============================================

model BulkEmail {
  id             String   @id @default(cuid())
  subject        String
  body           String   @db.Text
  recipientType  String   // "OWNER", "TENANT", "ALL"
  recipientCount Int
  sentAt         DateTime @default(now())

  // Relations
  sentById String
  sentBy   User   @relation(fields: [sentById], references: [id])

  @@map("bulk_emails")
}

// ============================================
// MAGIC LINK AUTHENTICATION
// ============================================

model MagicLinkToken {
  id        String    @id @default(cuid())
  token     String    @unique @default(cuid())
  email     String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([email])
  @@index([token])
  @@map("magic_link_tokens")
}
